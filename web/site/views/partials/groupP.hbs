<div class="col-6">
    {{#with group}}
        <h1><a href="/groups/{{id}}">{{name}}</a></h1>
        <p>{{description}}</p>
        <p>Total duration: {{totalDuration}}</p>

    {{/with}}
    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="/groups/{{id}}/edit">
            <button class="btn btn-primary btn-sm">Edit</button>
        </a>
        <form action="/groups/delete" method="POST">
            <input type="hidden" value="{{id}}" name="groupId">
            <input class="btn btn-danger btn-sm " type="submit" value="Delete">
        </form>
    </div>
    <h2>Movies</h2>
    <ul>
        {{#each movies}}
            <li><a href="/movies/{{id}}">{{title}}</a></li>
        {{/each}}
    </ul>
</div>
