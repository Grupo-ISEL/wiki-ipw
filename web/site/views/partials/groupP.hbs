<div class="col-6">
    {{#with group}}
        <h1><a href="/groups/{{id}}/edit">{{name}}</a></h1>
        <p>{{description}}</p>
        <p>Total duration: {{totalDuration}}</p>

    {{/with}}
    <h2>Movies</h2>
    <ul>
        {{#each movies}}
            <li><a href="/movies/{{id}}">{{title}}</a></li>
        {{/each}}
    </ul>
</div>
<div class="col-2">
    <form action="/groups/delete" method="POST">
        <input type="hidden" value="{{id}}" name="groupId">
        <input class="btn btn-danger btn-sm " type="submit" value="Delete">
    </form>
</div>
