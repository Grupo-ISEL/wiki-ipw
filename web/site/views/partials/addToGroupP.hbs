
<form action="/groups/addMovie" method="POST">
    <label for="groupId">Group:</label>
    <select name="groupId" id="groupId">
        {{#each groups}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br><br>
    <input type="hidden" value="{{movieId}}" id="movieId" name="movieId">
    <input class="btn btn-primary" type="submit" value="Add Movie">
    <input class="btn btn-secondary" type="button" id="bSave" value="Add Movie (API)">
</form>
