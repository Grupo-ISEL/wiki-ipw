<form action="/groups/addMovie" method="POST">
    <label for="groupId">Group:</label>
    <select class="form-select mb-3" name="groupId" id="groupId">
        {{#each groups}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <input type="hidden" value="{{movieId}}" id="movieId" name="movieId">
    <input class="btn btn-primary" type="submit" value="Add Movie">
    <input class="btn btn-secondary" type="button" id="bAddMovie" value="Add Movie (API)">
</form>
<script type="application/ecmascript" src="/js/group.js">
</script>

<script type="application/ecmascript">
    registerAddMovie('{{token}}')
</script>
