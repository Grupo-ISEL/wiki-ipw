<div class="card mb-3" style="max-width: 880px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{image}}" class="card-img" alt="poster">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><a href="/movies/{{id}}" class="card-link">{{title}} ({{year}})</a></h5>
                <p class="card-text">Rank: {{rank}}</p>
                <p class="card-text">IMDB Rating: {{imdbRating}}</p>
            </div>
        </div>
    </div>
</div>
