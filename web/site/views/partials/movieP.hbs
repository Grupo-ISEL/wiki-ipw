{{#with movie}}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{imageUrl}}" class="card-img" alt="poster">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}} ({{year}})</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">IMDB Rating: {{imdbRating}}</p>
                    <p class="card-text">Director(s): {{directors}}</p>
                    <p class="card-text">Writer(s): {{writers}}</p></div>
            </div>
        </div>
    </div>
{{/with}}

