{{#with movie}}
<h1>{{title}} ({{year}})</h1>
<h4>{{description}}</h4>
<p>runtime: {{runtimeMins}} minutes</p>
<p>IMDB Rating: {{imdbRating}}</p>
<p>Director(s): {{directors}}</p>
<p>Writer(s): {{writers}}</p>
<p>Actors:</p>
{{#each actors}}
    <div class="row justify-content-center text-center">
        {{> actorP}}
    </div>
{{/each}}
{{/with}}
